<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>release-archive</id>
    
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    
    <fileSets>
        <fileSet>
            <includes>
                <include>opennms-pris.jar</include>
            </includes>
            <directory>${project.basedir}/target</directory>
            <outputDirectory>./</outputDirectory>
        </fileSet>
        
        <fileSet>
            <includes>
                <include>opennms-pris.sh</include>
            </includes>
            <directory>${project.basedir}/src/main/resources</directory>
            <outputDirectory>./</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        
        <fileSet>
            <includes>
                <include>**</include>
            </includes>
            <directory>${project.basedir}/src/examples/</directory>
            <outputDirectory>examples</outputDirectory>
        </fileSet>
        
        <fileSet>
            <includes>
                <include>**</include>
            </includes>
            <directory>${project.basedir}/../opennms-pris-docs/target/site/</directory>
            <outputDirectory>documentation</outputDirectory>
        </fileSet>
    </fileSets>
    
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>${project.groupId}:opennms-pris-plugins-*:jar:shaded</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
