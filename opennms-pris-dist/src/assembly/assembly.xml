<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>foobar</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    
    <fileSets>
        <fileSet>
            <includes>
                <include>*with-dependencies.jar</include>
            </includes>
            <directory>${project.basedir}/../opennms-pris/target</directory>
            <outputDirectory>./</outputDirectory>
        </fileSet>
        <fileSet>
            <includes>
                <include>**</include>
            </includes>
            <directory>${project.basedir}/../opennms-pris/src/examples/</directory>
            <outputDirectory>examples</outputDirectory>
        </fileSet>
        <fileSet>
            <includes>
                <include>**</include>
            </includes>
            <directory>${project.basedir}/../opennms-pris-docs/target/site/</directory>
            <outputDirectory>documentation</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>